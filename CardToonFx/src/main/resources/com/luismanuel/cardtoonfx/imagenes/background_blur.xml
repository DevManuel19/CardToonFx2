<?xml version="1.0" encoding="utf-8"?>
<!-- background_blur.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40FFFFFF" /> <!-- Color blanco transparente -->
        </shape>
    </item>
    <item android:right="8dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#00FFFFFF"
                android:centerColor="#40FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear"
                android:angle="180" /> <!-- Gradiente para difuminar hacia la derecha -->
        </shape>
    </item>
    <item android:left="8dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#00FFFFFF"
                android:centerColor="#40FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear"
                android:angle="0" /> <!-- Gradiente para difuminar hacia la izquierda -->
        </shape>
    </item>
</layer-list>
